<h1>新增任務</h1>

<%= form_for @mission do |form| %>
  <div>
    <%= form.label :title, "任務名" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :priority, "優先度" %>
    <%= form.text_field :priority %>
  </div>
  <div>
    <%= form.label :category, "種類" %>
    <%= form.text_field :category %>
  </div>
  <div>
    <%= form.label :start_time, "起始時間" %>
    <%= form.text_field :start_time %>
  </div>
  <%= form.submit "送出" %>
<% end %>